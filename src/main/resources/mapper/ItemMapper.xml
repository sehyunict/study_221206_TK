<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="sehyunict.tk.item.service.ItemDao">
	
	<!-- item 등록 -->
	<insert id="insert">
	
	</insert>

	<!-- item + timetable 목록조회  -->
	<select id="selectList" resultType="sehyunict.tk.item.entity.ItemVo">
		SELECT * 
		FROM 
		    TN_TK_ITEM A
		  , TN_TK_TIMETABLE B 
		WHERE 
		    A.ITEM_ID = B.ITEM_ID		
	</select>
	
	<!-- item + timetable 단건조회  -->
	<select id="select" parameterType="String" resultType="sehyunict.tk.item.entity.ItemVo">
		SELECT * 
		FROM 
		    TN_TK_ITEM A
		  , TN_TK_TIMETABLE B 
		WHERE 
		    A.ITEM_ID = B.ITEM_ID
		AND 
		    A.ITEM_ID = #{item_id}		    	
	</select>
	
	
	<!-- 특정 item 검색(timetable 정보포함) -->
	<select id="" parameterType="String" resultType="sehyunict.tk.item.entity.ItemVo">
	
	
	</select>
	
	<!-- 수정 -->
 	<update id="update">
	
	</update>
	
	<!-- 삭제 -->
	<delete id="delete">
	
	</delete>
	
</mapper>        
        